<%= form_with(model: product, local: true) do |form| %>

  <%= form.hidden_field :user_id, value: @user.id %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
